---
import Section from "../Section.astro"

import { certificates } from "@cv"
const months = ["Ene","Feb","Mar","Abr","May","Jun","Jul","Ago","Sep","Oct","Nov","Dic"]
---

<Section title="Certificaciones">
  <ul>
    {
      certificates.map(({ issuer, date, name, url }) => {
        const startYear = new Date(date).getFullYear()
        const years = `${startYear}`
        const month = months[new Date(date).getMonth()]

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{issuer}</h3>
                </div>
                <time>{month}-{years}</time>
              </header>

              <footer>
                <p>{name}</p>                
                <a class="no-print" href="{url}">Credencial</a>        
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
  }

  article {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    margin-left: 10px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
  }

  time {
    text-align: end;
    color: #555;
    font-size: 0.85rem;
    min-width: 70px;
  }

  footer {
    display: flex;
    flex-direction: column;
  }

  footer p {
    margin-bottom: auto;
  }

  footer a {
    margin-top: 10px;
* Alinea el enlace al fondo */
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
