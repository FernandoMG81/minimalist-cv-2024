---
import Section from "../Section.astro"

import { languages } from "@cv"
---

<Section title="Idiomas">
  <ul>
    {
      languages.map(({ institution, language, comment }) => {
        
        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{institution}</h3>
                </div>            
              </header>
              <footer>
                <p>{comment}</p>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
